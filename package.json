{
  "name": "ci-cd-web",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "lint": "eslint .",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand",
    "build": "npm run build:css && npm run build:ts && npm run build:html",
    "build:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --minify",
    "build:ts": "tsc",
    "build:html": "cp src/index.html dist/",
    "build:all": "npm run build:css && npm run build:ts && npm run build:html",
    "watch:html": "chokidar \"src/index.html\" -c \"npm run build:html\"",
    "dev": "npm run build:all && concurrently \"npm run build:css -- --watch\" \"npm run build:ts -- --watch\" \"npm run watch:html\" \"live-server dist --port=3000 --open=/\""
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/jest": "^29.5.14",
    "autoprefixer": "^10.4.20",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.1.0",
    "eslint": "^9.38.0",
    "globals": "^16.4.0",
    "jest": "^29.7.0",
    "live-server": "^1.2.2",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1"
  }
}
